<%# app/views/services/_list.html.erb %>
<div id="filterrific_results">
<div class="well well-small">
  	
    	<%= page_entries_info services %>
    
    <div class="pull-right">
    	<%= link_to 'Reset filters', reset_filterrific_url, class: "btn btn-default btn-sm" %>
  	</div>
  	<div>
  		  <%= render_filterrific_spinner %>
  	</div>
</div>

  <table class="table">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Country</th>
      <th>Cost</th>
      <th>Registered at</th>
    </tr>
    <% services.each do |service| %>
      <tr>
        <td><%= link_to(service.name, service_path(service)) %></td>
        <td>RM <%= service.price %></td>
        <td><%= service.country.name %></td>
        <td>RM <%= service.cost %></td>
        <td><%= service.decorated_created_at %></td>
      </tr>
    <% end %>
  </table>
<%= will_paginate services, renderer: BootstrapPagination::Rails %>
</div>
